import { NextResponse } from "next/server";
import type { NextRequest } from "next/server";

const AUTH_ROUTES = [
  "/login",
  "/register",
  "/forgot-password",
  "/reset-password",
  "/confirm-email",
];

const PROTECTED_PREFIX = "/dashboard";

export function middleware(request: NextRequest) {
  const { pathname } = request.nextUrl;

  const accessToken = request.cookies.get("MyAppAccessToken")?.value;
  
  // Debug logging
  console.log("Middleware check:", {
    pathname,
    hasAccessToken: !!accessToken,
    allCookies: request.cookies.getAll().map(c => c.name)
  });

  const isAuthRoute = AUTH_ROUTES.some((route) => pathname.startsWith(route));

  const isProtectedRoute = pathname.startsWith(PROTECTED_PREFIX) || pathname.startsWith("/projects");

  // User not logged in and tries to access protected route
  if (!accessToken && isProtectedRoute) {
    console.log("Redirecting to login - no access token");
    const loginUrl = new URL("/login", request.url);
    return NextResponse.redirect(loginUrl);
  }

  // User logged in and tries to access auth pages
  if (accessToken && isAuthRoute) {
    const dashboardUrl = new URL("/dashboard", request.url);
    return NextResponse.redirect(dashboardUrl);
  }

  return NextResponse.next();
}

export const config = {
  matcher: [
    "/login",
    "/register",
    "/forgot-password",
    "/reset-password",
    "/confirm-email",
    "/dashboard/:path*",
    "/projects/:path*",
  ],
};
